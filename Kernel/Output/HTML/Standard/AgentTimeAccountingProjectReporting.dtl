<div class="MainBox ARIARoleMain LayoutFixedSidebar SidebarFirst">
    <h1 class="Header">$Text{"Project report"}: $QData{"Project"}</h1>

    <div class="SidebarColumn">
        <div class="WidgetSimple">
            <div class="Header">
                <h2>$Text{"Actions"}</h2>
            </div>
            <div class="Content">
                <ul class="ActionList">
                    <li>
                        <a href="$Env{"Baselink"}Action=$Env{"Action"};Subaction=Reporting" class="CallForAction"><span>$Text{"Go to overview"}</span></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="ContentColumn">
        <div class="WidgetSimple">
            <div class="Header">
                <h2>$Text{"Project report"}: $QData{"Project"}</h2>
            </div>
            <div class="Content">

                <table class="DataTable DataTableNoHighlight">
                    <thead>
                        <tr>
                            <th>$Text{"Task"}</th>
<!-- dtl:block:UserName -->
                            <th>$QData{"User"}</th>
<!-- dtl:block:UserName -->
                            <th>$Text{"Total"}</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
<!-- dtl:block:Action -->
                            <td>$QData{"Action"}</td>
<!-- dtl:block:User -->
                            <td class="Right">$QData{"Hours"}</td>
<!-- dtl:block:User -->
                        </tr>
<!-- dtl:block:Action -->
                        <tr class="GrandTotal">
                            <td><strong>$Text{"Total"}</strong></td>
<!-- dtl:block:UserTotal -->
                            <td class="Right"><strong>$QData{"Total"}</strong></td>
<!-- dtl:block:UserTotal -->
                            <td class="Right"><strong>$QData{"TotalAll"}</strong></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="WidgetSimple">
            <div class="Header">
                <h2>$Text{"History"}: $QData{"Project"}</h2>
            </div>
            <div class="Content">

                <table class="DataTable DataTableNoHighlight">
                    <thead>
                        <tr>
                            <th>$Text{"Date"}</th>
                            <th>$Text{"User"}</th>
                            <th>$Text{"Task"}</th>
                            <th>$Text{"Remark"}</th>
                            <th>$Text{"Period"}</th>
                        </tr>
                    </thead>
                    <tbody>
<!-- dtl:block:Row -->
                        <tr>
                            <td>$QData{"Date"}</td>
                            <td>$QData{"User"}</td>
                            <td>$QData{"Action"}</td>
                            <td>$QData{"Remark"}</td>
                            <td class="Right">$QData{"Period"}</td>
                        </tr>
<!-- dtl:block:Row -->
                        <tr class="GrandTotal">
<!-- dtl:block:HistoryTotal -->
                            <td colspan="4"><strong>$Text{"Total"}</strong></td>
                            <td class="Right"><strong>$QData{"HistoryTotal"}</strong></td>
<!-- dtl:block:HistoryTotal -->
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
