<table border="0" width="100%" cellspacing="0" cellpadding="3">
  <tr>
    <td class="mainhead">
      $Env{"Box0"}$Text{"Edit Time Accounting Preference"}$Env{"Box1"}
    </td>
  </tr>
  <tr>
    <td class="mainbody">
      <br>
      <form action="$Env{"CGIHandle"}" method="post" enctype="multipart/form-data">
        <input type="hidden" name="Action" value="$Env{"Action"}">
        <input type="hidden" name="Subaction" value="Setting">      
        <table border="0" width="700" align="center" cellspacing="0" cellpadding="4">
          <tr>
            <td class="contenthead">$Text{"Project Setting"}</td>
          </tr>
          <tr>
            <td class="contentbody">
              <table border="0" cellspacing="0" cellpadding="3" align="center">
                <tr>
                  <td class="contentkey">$Text{"Project"}<span class="required">*</span></td>
                  <td class="contentkey">$Text{"Status"}<span class="required">*</span></td>
                </tr>
<!-- dtl:block:Project -->                
                <tr>
                  <td class="contentvalue"><input type="text" name="Project[$QData{"ProjectID"}]" value="$QData{"Project"}" size="40"></td>
                  <td class="contentvalue">$Data{"StatusOption"}</td>                                                                        
                </tr>
<!-- dtl:block:Project -->  
                <tr>
                  <td class="contentkey" colspan="2"><input class="button" accesskey="g" type="submit" value="$Text{"new"}" name="NewProject"></td>
                </tr>       
              </table>
            </td>
          </tr>
          <tr>
            <td class="contentfooter"><input class="button" accesskey="g" type="submit" value="$Text{"submit"}" name="ActionProject"></td>
          </tr>
        </table>
        <br>
        <table border="0" width="700" align="center" cellspacing="0" cellpadding="4">
          <tr>
            <td class="contenthead">$Text{"Action Setting"}</td>
          </tr>
          <tr>
            <td class="contentbody">
              <table border="0" cellspacing="0" cellpadding="3" align="center">
                <tr>
                  <td class="contentkey">$Text{"Action"}<span class="required">*</span></td>
                  <td class="contentkey">$Text{"Status"}<span class="required">*</span></td>
                </tr>
<!-- dtl:block:Action -->                
                <tr>
                  <td class="contentvalue"><input type="text" name="Action[$QData{"ActionID"}]" value="$QData{"Action"}" size="40"></td>
                  <td class="contentvalue">$Data{"StatusOption"}</td>                                                                        
                </tr>
<!-- dtl:block:Action -->  
                <tr>
                  <td class="contentkey" colspan="2"><input class="button" accesskey="g" type="submit" value="$Text{"new"}" name="NewAction"></td>
                </tr> 
              </table>
            </td>
          </tr>
          <tr>
            <td class="contentfooter"><input class="button" accesskey="g" type="submit" value="$Text{"submit"}" name="ActionAction"></td>
          </tr>
        </table>  
        <br>
        <table border="0" width="700" align="center" cellspacing="0" cellpadding="4">
          <tr>
            <td class="contenthead">$Text{"User Setting"}</td>
          </tr>
          <tr>
            <td class="contentbody">
              <table border="0" cellspacing="0" cellpadding="3" align="center">

<!-- dtl:block:User -->                
                <tr>
                  <td class="contentvalue" colspan="6">$QData{"User"}</td>
                </tr>
                <tr>
                  <td class="contentkey">$Text{"Startdate"}<span class="required">*</span></td>   
                  <td class="contentkey">$Text{"Enddate"}<span class="required">*</span></td>                                 
                  <td class="contentkey">$Text{"Weekly Hours"}<span class="required">*</span></td>
                  <td class="contentkey">$Text{"Leave Day"}<span class="required">*</span></td>   
                  <td class="contentkey">$Text{"Overtime"}<span class="required">*</span></td>                                                                                       
                  <td class="contentkey">$Text{"Status"}<span class="required">*</span></td>               
                </tr>                
   <!-- dtl:block:Period -->                                                                                           
                <tr>             
                  <td class="contentvalue"><input type="text" name="DateStart[$QData{"UserID"}][$QData{"Period"}]" value="$QData{"DateStart"}" size="12"></td>                                    
                  <td class="contentvalue"><input type="text" name="DateEnd[$QData{"UserID"}][$QData{"Period"}]" value="$QData{"DateEnd"}" size="12"></td>                  
                  <td class="contentvalue"><input type="text" name="WeeklyHours[$QData{"UserID"}][$QData{"Period"}]" value="$QData{"WeeklyHours"}" size="5"></td>
                  <td class="contentvalue"><input type="text" name="LeaveDays[$QData{"UserID"}][$QData{"Period"}]" value="$QData{"LeaveDays"}" size="5"></td>                                                                      
                  <td class="contentvalue"><input type="text" name="Overtime[$QData{"UserID"}][$QData{"Period"}]" value="$QData{"Overtime"}" size="5"></td>                                                                                        
                  <td class="contentvalue">$Data{"StatusOption"}</td>                     
                </tr>
   <!-- dtl:block:Period -->    
                <tr>
                  <td class="contentvalue"  colspan="6"><input class="button" type="submit" value="$Text{"new user setting"}"  name="NewUserSetting[$QData{"UserID"}]"></td>                                                                                                                                                                                  
                </tr>                                                    
                <tr>
                  <td class="contentkey" colspan="6"><hr></td>
                </tr>                   
<!-- dtl:block:User -->  
                <tr>
                  <td class="contentkey" colspan="6">$Data{"NewUserOption"}<input class="button" accesskey="g" type="submit" value="$Text{"new"}"  name="NewUser"></td>
                </tr>              
              </table>
            </td>
          </tr>
          <tr>
            <td class="contentfooter"><input class="button" accesskey="g" type="submit" value="$Text{"submit"}" name="ActionUser"></td>
          </tr>
          <tr><td><div class="required">* $Text{"Required Field"}</div></td></tr>
        </table> 
      </form>             
      <br>
    </td>
  </tr>
</table>

